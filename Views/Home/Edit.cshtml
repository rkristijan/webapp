@model UpdatePolicyModel

@{

}

<div class="container mt-5">
    <div class="row justify-content-left">
        <div class="col-sm-3">
            <form asp-action="Edit" enctype="multipart/form-data">
                
                <div class="form-group">
                
                    <label asp-for="Id" class="control-label">Policy ID</label>
                    <input asp-for="Id" class="form-control" value="@Model.Id" readonly="readonly"/>
                
                </div>
                
                
                <div class="form-group">

                    <label asp-for="insurerName" class="control-label">InsurerName</label>
                    <input asp-for="insurerName" class="form-control"/>

                </div>
                <br/>
                <div class="form-group">
                    <label asp-for="policyType">Policy Type:</label>
                    <select class="form-control disabled" asp-for="policyType" readonly>
                        <option value="auto">Auto Insurance</option>
                        <option value="health">Health Insurance</option>
                        <option value="home">Home Insurance</option>
                        <option value="travel">Travel Insurance</option>
                    </select>
                </div>
                <br/>
                <div class="form-group">
                    <label asp-for="startDate">Start Date:</label>
                    <input type="date" class="form-control" asp-for="startDate">
                </div>
                <br/>
                <div class="form-group">
                    <label asp-for="endDate">End Date:</label>
                    <input type="date" class="form-control" asp-for="endDate">
                </div>
                <br/>
                <button type="submit" class="btn btn-primary">Edit</button>
                <button type="submit" asp-controller="Home" asp-action="Delete" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
    </div>