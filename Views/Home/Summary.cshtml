@model List<PolicyModel> 
@{
    ViewData["Title"] = "Policy Summary";
}

<h1>Policy summary</h1>

<br/>

@if (Model.Count > 0) {
    
    <table class="table table-bordered">
    
        <thead>
        <tr>
            <th>Serial Number</th>
            <th>Insurer Name</th>
            <th>Policy Type</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Premium Amount</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var policy in Model) {
            <tr>
                <td>@policy.serialNumber</td>
                <td>@policy.insurerName</td>
                <td>@policy.policyType</td>
                <td>@policy.startDate.ToString("dd.MM.yyyy")</td>
                <td>@policy.endDate.ToString("dd.MM.yyyy")</td>
                <td>@policy.premiumAmount</td>
                <td><a class="btn btn-primary btn-sm" href="/Home/Edit/@policy.Id">Edit</a></td>
            </tr>
        }
        </tbody>
    
    </table>
    
}

